% ---
% Adiciona figura simples 
% ---
\newcommand{\figurasimples}[4] {
    \begin{figure}[H]
        \caption{#2}
        \label{fig:#4}
        \begin{center}
            \includegraphics[width=#3]{#1}
        \end{center}
    \end{figure}
}

% ---
% Adiciona figura dupla 
% ---
\newcommand{\figuradupla}[4]{
  \begin{figure}[H]
    \begin{center}  
      \begin{subfigure}[b]{.45\textwidth}
        \includegraphics[width=\textwidth]{#1}
        \caption{}
        \label{fig:#1}
      \end{subfigure}
      ~
      \begin{subfigure}[b]{.45\textwidth}
        \includegraphics[width=\textwidth]{#3}
        \caption{}
        \label{fig:#3}
      \end{subfigure}

    \end{center}
    \caption{(a) #2; (b) #4.}
  \end{figure}
}

